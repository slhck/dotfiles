" enable syntax highlighting
syntax on

" tab related settings
set tabstop=4
set shiftwidth=4
set softtabstop=0
set expandtab
set smarttab

" Ctrl-P plugin
" install with
" mkdir -p ~/.vim && cd ~/.vim && git clone https://github.com/kien/ctrlp.vim.git bundle/ctrlp.vim
set runtimepath^=~/.vim/bundle/ctrlp.vim

set ruler
