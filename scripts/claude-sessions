<script>
let ALL = [];
let filtered = [];
let activeDir = null;
let currentSort = 'modified-desc';

const $  = s => document.querySelector(s);
const $$ = s => document.querySelectorAll(s);

dayjs.extend(dayjs_plugin_relativeTime);

function relTime(iso) {
  if (!iso) return '—';
  return dayjs(iso).fromNow();
}

function fmtDate(iso) {
  if (!iso) return '';
  return new Date(iso).toLocaleString('en-GB', {
    year: 'numeric', month: 'short', day: 'numeric',
    hour: '2-digit', minute: '2-digit'
  });
}

function shortDir(p) {
  if (!p) return '~';
  const h = '/Users/werner';
  if (p === h) return '~';
  if (p.startsWith(h + '/')) return '~/' + p.slice(h.length + 1);
  return p;
}

function tailDir(p) {
  const s = shortDir(p);
  if (s === '~') return '~';
  const parts = s.replace(/^~\//, '').split('/');
  if (parts.length <= 2) return s;
  return parts.slice(-2).join('/');
}

function dirCounts() {
  const m = {};
  ALL.forEach(s => {
    const d = shortDir(s.projectPath);
    m[d] = (m[d] || 0) + 1;
  });
  return Object.entries(m).sort((a,b) => b[1] - a[1]);
}

// ── Fuzzy directory finder ──
let allDirs = []; // [{path, count}]
let dirHighlight = -1;

function fuzzyMatch(haystack, needle) {
  // Returns {matched, score, highlighted} or null
  const lower = haystack.toLowerCase();
  const nlower = needle.toLowerCase();
  let hi = 0, score = 0, last = -1, highlighted = '';
  let pos = 0;
  for (let i = 0; i < nlower.length; i++) {
    const idx = lower.indexOf(nlower[i], hi);
    if (idx === -1) return null;
    // Bonus for consecutive matches and start-of-segment matches
    if (idx === last + 1) score += 3;
    if (idx === 0 || haystack[idx-1] === '/') score += 5;
    score += 1;
    // Build highlighted string
    highlighted += esc(haystack.slice(pos, idx)) + '<mark>' + esc(haystack[idx]) + '</mark>';
    pos = idx + 1;
    hi = idx + 1;
    last = idx;
  }
  highlighted += esc(haystack.slice(pos));
  return { score, highlighted };
}

function buildDirTree(dirs) {
  // Group dirs by common prefixes for a tree-like display
  // Sort alphabetically for the tree
  return dirs.slice().sort((a,b) => a.path.localeCompare(b.path));
}

function computeTreePrefix(dirs, i) {
  if (dirs.length <= 1) return '';
  const cur = dirs[i].path.split('/');
  const prev = i > 0 ? dirs[i-1].path.split('/') : [];
  // Find common prefix depth with previous
  let common = 0;
  for (let j = 0; j < Math.min(cur.length, prev.length); j++) {
    if (cur[j] === prev[j]) common++;
    else break;
  }
  const depth = cur.length - 1;
  if (depth === 0) return '';
  return '<span class="dir-item-tree">' + '\u2502 '.repeat(Math.min(common, depth - 1)) + '\u251c ' + '</span>';
}

function renderDirDropdown(query) {
  const counts = dirCounts();
  allDirs = counts.map(([path, count]) => ({ path, count }));
  const dropdown = $('#dirDropdown');
  const list = $('#dirList');

  let items;
  if (!query) {
    items = buildDirTree(allDirs).map(d => ({
      ...d, highlighted: esc(d.path), score: 0
    }));
  } else {
    items = [];
    for (const d of allDirs) {
      const m = fuzzyMatch(d.path, query);
      if (m) items.push({ ...d, highlighted: m.highlighted, score: m.score });
    }
    items.sort((a,b) => b.score - a.score);
  }

  if (items.length === 0) {
    list.innerHTML = '<div class="dir-item"><span class="dir-item-path" style="color:var(--text-tertiary)">no matching directories</span></div>';
    dirHighlight = -1;
  } else {
    list.innerHTML = items.map((d, i) =>
      '<div class="dir-item' + (i === dirHighlight ? ' highlighted' : '') + '" data-dir="' + esc(d.path) + '" data-idx="' + i + '">' +
      '<span class="dir-item-path">' + d.highlighted + '</span>' +
      '<span class="dir-item-count">' + d.count + '</span>' +
      '</div>'
    ).join('');
    list.querySelectorAll('.dir-item').forEach(el => {
      el.addEventListener('mouseenter', () => {
        dirHighlight = parseInt(el.dataset.idx);
        list.querySelectorAll('.dir-item').forEach(e => e.classList.remove('highlighted'));
        el.classList.add('highlighted');
      });
      el.onclick = () => selectDir(el.dataset.dir);
    });
  }
  dropdown.classList.add('open');
  return items;
}

function selectDir(dir) {
  const input = $('#dirInput');
  const finder = $('#dirFinder');
  activeDir = dir || null;
  if (dir) {
    input.value = dir;
    finder.classList.add('has-selection');
  } else {
    input.value = '';
    finder.classList.remove('has-selection');
  }
  $('#dirDropdown').classList.remove('open');
  dirHighlight = -1;
  applyFilters();
}

// Wire up directory finder events
document.addEventListener('DOMContentLoaded', () => {
  const input = $('#dirInput');
  const dropdown = $('#dirDropdown');

  let currentItems = [];
  input.addEventListener('focus', () => {
    dirHighlight = -1;
    currentItems = renderDirDropdown(input.value);
  });
  input.addEventListener('input', () => {
    if ($('#dirFinder').classList.contains('has-selection')) {
      activeDir = null;
      $('#dirFinder').classList.remove('has-selection');
      applyFilters();
    }
    dirHighlight = -1;
    currentItems = renderDirDropdown(input.value);
  });
  input.addEventListener('keydown', e => {
    if (!dropdown.classList.contains('open')) return;
    const items = $('#dirList').querySelectorAll('.dir-item[data-dir]');
    if (e.key === 'ArrowDown') {
      e.preventDefault();
      dirHighlight = Math.min(dirHighlight + 1, items.length - 1);
      items.forEach((el, i) => el.classList.toggle('highlighted', i === dirHighlight));
      items[dirHighlight]?.scrollIntoView({ block: 'nearest' });
    } else if (e.key === 'ArrowUp') {
      e.preventDefault();
      dirHighlight = Math.max(dirHighlight - 1, 0);
      items.forEach((el, i) => el.classList.toggle('highlighted', i === dirHighlight));
      items[dirHighlight]?.scrollIntoView({ block: 'nearest' });
    } else if (e.key === 'Enter') {
      e.preventDefault();
      if (dirHighlight >= 0 && items[dirHighlight]) {
        selectDir(items[dirHighlight].dataset.dir);
      }
      input.blur();
    } else if (e.key === 'Escape') {
      e.preventDefault();
      selectDir(null);
      input.blur();
    }
  });

  // Close dropdown when clicking outside
  document.addEventListener('mousedown', e => {
    if (!$('#dirFinder').contains(e.target)) {
      dropdown.classList.remove('open');
    }
  });

  $('#dirClear').onclick = (e) => {
    e.stopPropagation();
    selectDir(null);
    input.focus();
  };
});

function applyFilters() {
  const q = $('#search').value.toLowerCase().trim();
  filtered = ALL.filter(s => {
    if (activeDir && shortDir(s.projectPath) !== activeDir) return false;
    if (q) {
      const hay = ((s.summary || '') + ' ' + (s.firstPrompt || '') + ' ' + (s.projectPath || '')).toLowerCase();
      if (!hay.includes(q)) return false;
    }
    return true;
  });
  sortFiltered();
  renderTable();
  renderStats();
}

function sortFiltered() {
  const [key, dir] = currentSort.split('-');
  const asc = dir === 'asc' ? 1 : -1;
  filtered.sort((a, b) => {
    if (key === 'modified') return asc * ((a.fileMtime || new Date(a.modified || 0).getTime()) - (b.fileMtime || new Date(b.modified || 0).getTime()));
    if (key === 'dir') return asc * (shortDir(a.projectPath) || '').localeCompare(shortDir(b.projectPath) || '');
    if (key === 'messages') return asc * ((a.messageCount || 0) - (b.messageCount || 0));
    return 0;
  });
}

function renderStats() {
  const dirs = new Set(ALL.map(s => s.projectPath));
  const shown = filtered.length;
  $('#stats').innerHTML =
    '<strong>' + ALL.length + '</strong> sessions across <strong>' + dirs.size + '</strong> projects' +
    (shown !== ALL.length ? '<br>showing <strong>' + shown + '</strong>' : '');
}

function esc(s) {
  const d = document.createElement('div');
  d.textContent = s;
  return d.innerHTML;
}

function renderTable() {
  const tbody = $('#tbody');
  if (filtered.length === 0) {
    tbody.innerHTML = '<tr><td colspan="6" class="empty-state">no sessions match</td></tr>';
    return;
  }
  tbody.innerHTML = filtered.map(s => {
    const title = s.summary || s.firstPrompt || '(untitled)';
    const prompt = s.summary && s.firstPrompt ? s.firstPrompt : '';
    return '<tr data-sid="' + s.sessionId + '" data-path="' + esc(s.projectPath || '') + '">' +
      '<td class="td-dir" title="' + esc(shortDir(s.projectPath)) + '">' + esc(tailDir(s.projectPath)) + '</td>' +
      '<td><div class="td-title">' + esc(title) + '</div>' +
        (prompt ? '<div class="td-prompt">' + esc(prompt) + '</div>' : '') +
      '</td>' +
      '<td class="td-branch hide-sm">' + esc(s.gitBranch || '—') + '</td>' +
      '<td class="td-count">' + (s.messageCount || 0) + '</td>' +
      '<td class="td-meta" title="' + fmtDate(s.modified) + '">' + relTime(s.modified) + '</td>' +
      '<td class="td-meta hide-sm" title="' + fmtDate(s.created) + '">' + relTime(s.created) + '</td>' +
    '</tr>';
  }).join('');

  tbody.querySelectorAll('tr[data-sid]').forEach(tr => {
    tr.onclick = () => openSession(tr.dataset.sid, tr.dataset.path);
  });
}

async function openSession(sid, path) {
  const toast = $('#toast');
  toast.textContent = 'opening session…';
  toast.classList.add('show');
  try {
    const r = await fetch('/api/open', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({sessionId: sid, projectPath: path})
    });
    const d = await r.json();
    if (d.ok) {
      toast.textContent = 'opened in ' + d.terminal;
    } else {
      toast.textContent = 'error: ' + (d.error || 'unknown');
    }
  } catch(e) {
    toast.textContent = 'request failed';
  }
  setTimeout(() => toast.classList.remove('show'), 2500);
}

// Column header sorting
$$('thead th[data-col]').forEach(th => {
  th.onclick = () => {
    const col = th.dataset.col;
    const map = {dir:'dir',modified:'modified',created:'modified',messages:'messages',title:'modified',branch:'dir'};
    const sortKey = map[col] || 'modified';
    if (currentSort.startsWith(sortKey)) {
      currentSort = sortKey + (currentSort.endsWith('desc') ? '-asc' : '-desc');
    } else {
      currentSort = sortKey + '-desc';
    }
    $('#sortBy').value = currentSort;
    applyFilters();
  };
});

$('#search').addEventListener('input', applyFilters);
$('#sortBy').addEventListener('change', e => {
  currentSort = e.target.value;
  applyFilters();
});

// Load
// Global keyboard shortcuts
document.addEventListener('keydown', e => {
  // Ignore if already in an input
  const tag = document.activeElement.tagName;
  const inInput = tag === 'INPUT' || tag === 'TEXTAREA' || tag === 'SELECT';

  if (e.key === '/' && !inInput) {
    e.preventDefault();
    $('#search').focus();
  } else if (e.key === 'k' && (e.metaKey || e.ctrlKey)) {
    e.preventDefault();
    $('#dirInput').focus();
  } else if (e.key === 'Escape' && inInput) {
    document.activeElement.blur();
  }
});

fetch('/api/sessions')
  .then(r => r.json())
  .then(data => {
    ALL = data;
    currentSort = 'modified-desc';
    applyFilters();
    $('#loading').style.display = 'none';
    $('#table').style.display = 'table';
    // Autofocus search box
    $('#search').focus();
  });
</script>
</body>
</html>
"""

IDLE_TIMEOUT = 300  # seconds (5 minutes)
last_activity = time.time()


@app.before_request
def track_activity():
    global last_activity
    last_activity = time.time()


def idle_watchdog(port: int):
    """Shut down the server after IDLE_TIMEOUT seconds of no requests."""
    while True:
        time.sleep(30)
        if time.time() - last_activity > IDLE_TIMEOUT:
            print(f"\n  idle for {IDLE_TIMEOUT}s — shutting down")
            os._exit(0)


if __name__ == "__main__":
    port = int(sys.argv[1]) if len(sys.argv) > 1 else 5111
    url = f"http://localhost:{port}"
    print(f"\n  claude // sessions → {url}")
    print(f"  auto-shutdown after {IDLE_TIMEOUT // 60}m idle\n")

    # Start idle watchdog
    watchdog = threading.Thread(target=idle_watchdog, args=(port,), daemon=True)
    watchdog.start()

    # Open browser after a short delay
    threading.Timer(1.0, lambda: webbrowser.open(url)).start()

    app.run(host="127.0.0.1", port=port, debug=False)
